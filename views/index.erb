<div>
  <form action="/">
    <label for="book_name">
      Введите название книги
    </label>
    <input type="text" id="book_name" name="book_name" value="<%= @book_name %>" placeholder="желательно полное">
    <input type="submit" value="Искать">
  </form>
</div>
<% if @html_page %>
  <h2><%= @title %></h2>
  <% if @book_id.is_a?(Integer) %>
    <div style="display: inline-block;">
      <a href="/download?format=txt&book_name=<%= @book_name %>&author=<%= @author %>&book_id=<%= @book_id %>">txt</a>
    </div>
    <div style="display: inline-block;">
      <a href="/download?format=fb2&book_name=<%= @book_name %>&author=<%= @author %>&book_id=<%= @book_id %>">fb2</a>
    </div>
    <div style="display: inline-block; padding-left: 10px; border-left: 1px solid gray;">
    </div>
    <% @links.each do |format, link| %>
      <div style="display: inline-block;">
        <a href="<%= link %>"><%= format %></a>
      </div>
    <% end %>
  <% end %>
  <div><%= @html_page %></div>
<% end %>
